<% include ../partials/header.ejs%>

<div class="container">
    <h1 style="text-align:center;"> Create new campground</h1> 
    <div style="width: 60%; margin:0 auto;">
        <form action="/campground" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image-url">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="description" name="description">
            </div>
            <button class="btn btn-default btn-block" type="submit">Submit</button>
        </form>
    </div>
</div>