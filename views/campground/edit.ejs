<% include ../partials/header.ejs%>
<div class="container">
    <h1 style="text-align:center;"> Edit <%= campground.name%></h1> 
    <div style="width: 60%; margin:0 auto;">
        <form action="/campground/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="edit[name]" value="<%= campground.name%>">
            </div>
            <div class="form-group">
                    <input class="form-control" type="number" name="edit[price]" step="0.01" min="0.01" value="<%= campground.price%>" >
                </div>
            <div class="form-group">
                <input class="form-control" type="text" name="edit[image]" value="<%= campground.image%>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="edit[description]" value="<%=campground.description%>">
            </div>
            <button class="btn btn-default btn-block" type="submit">Submit</button>
        </form>
    </div>
</div>